.panel.panel-default
  .panel-heading.row
    .col-sm-2
      = image_tag @comment.event.image_url
    .col-sm-10
      %p
        = @comment.event.title
      %h4 
        A event by
        = @comment.event.business
  .panel-body.row
    .comment
      %a.comment-left{ href: "#{@comment.user}"}
        = image_tag @comment.user.profile.image_url, class: "media-object img-rounded", alt: "Generic placeholder image"
      .comment-body
        %h4.comment-heading
          = link_to @comment.user.name, @comment.user
          said
        %p= @comment.body
        %p.text-muted 
          = time_ago_in_words @comment.created_at
          = link_to "like", ""
          

= link_to 'Edit', edit_comment_path(@comment)
\|
= link_to 'Back', comments_path
