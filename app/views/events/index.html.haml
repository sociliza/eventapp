%section
  = params.inspect
  %section.col-lg-12.col-md-12
    %h1 Upcoming Events
    %p= link_to "Plan Business", home_index_path

    - if business_signed_in?
      = link_to 'Create A New Event', new_business_event_path(current_business)


    .btn-group.btn-group-justified
      = link_to "Today", events_path(:current_events => true), class: "btn btn-info btn-sm"
      = link_to "Upcoming", events_path(:upcoming => true), class: "btn btn-info btn-sm" 
      = link_to "Past", events_path(:past => true), class: "btn btn-info btn-sm" 

  %section.col-lg-12.col-md-12
    = render @events